<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:signed_date) %></th>
      <th><%= model_class.human_attribute_name(:initials) %></th>
      <th><%= model_class.human_attribute_name(:employer) %></th>
      <th><%= model_class.human_attribute_name(:crypted_password) %></th>
      <th><%= model_class.human_attribute_name(:password_salt) %></th>
      <th><%= model_class.human_attribute_name(:persistence_token) %></th>
      <th><%= model_class.human_attribute_name(:single_access_token) %></th>
      <th><%= model_class.human_attribute_name(:perishable_token) %></th>
      <th><%= model_class.human_attribute_name(:last_request_at) %></th>
      <th><%= model_class.human_attribute_name(:current_login_at) %></th>
      <th><%= model_class.human_attribute_name(:last_login_at) %></th>
      <th><%= model_class.human_attribute_name(:current_login_ip) %></th>
      <th><%= model_class.human_attribute_name(:last_login_ip) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.id, user_path(user) %></td>
        <td><%= user.email %></td>
        <td><%= user.signed_date %></td>
        <td><%= user.initials %></td>
        <td><%= user.employer %></td>
        <td><%= user.crypted_password %></td>
        <td><%= user.password_salt %></td>
        <td><%= user.persistence_token %></td>
        <td><%= user.single_access_token %></td>
        <td><%= user.perishable_token %></td>
        <td><%= user.last_request_at %></td>
        <td><%= user.current_login_at %></td>
        <td><%= user.last_login_at %></td>
        <td><%= user.current_login_ip %></td>
        <td><%= user.last_login_ip %></td>
        <td><%=l user.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_user_path(user), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      user_path(user),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_user_path,
            :class => 'btn btn-primary' %>
