<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @user.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:signed_date) %>:</strong></dt>
  <dd><%= @user.signed_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:initials) %>:</strong></dt>
  <dd><%= @user.initials %></dd>
  <dt><strong><%= model_class.human_attribute_name(:employer) %>:</strong></dt>
  <dd><%= @user.employer %></dd>
  <dt><strong><%= model_class.human_attribute_name(:crypted_password) %>:</strong></dt>
  <dd><%= @user.crypted_password %></dd>
  <dt><strong><%= model_class.human_attribute_name(:password_salt) %>:</strong></dt>
  <dd><%= @user.password_salt %></dd>
  <dt><strong><%= model_class.human_attribute_name(:persistence_token) %>:</strong></dt>
  <dd><%= @user.persistence_token %></dd>
  <dt><strong><%= model_class.human_attribute_name(:single_access_token) %>:</strong></dt>
  <dd><%= @user.single_access_token %></dd>
  <dt><strong><%= model_class.human_attribute_name(:perishable_token) %>:</strong></dt>
  <dd><%= @user.perishable_token %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_request_at) %>:</strong></dt>
  <dd><%= @user.last_request_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:current_login_at) %>:</strong></dt>
  <dd><%= @user.current_login_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_login_at) %>:</strong></dt>
  <dd><%= @user.last_login_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:current_login_ip) %>:</strong></dt>
  <dd><%= @user.current_login_ip %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_login_ip) %>:</strong></dt>
  <dd><%= @user.last_login_ip %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              users_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_path(@user), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              user_path(@user),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
